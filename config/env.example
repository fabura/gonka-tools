# Gonka.ai Toolchain Configuration
# =================================
# Copy this file to .env in the project root and fill in your values

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Gonka Wallet Configuration
GONKA_WALLET_ADDRESS=your_wallet_address_here
GONKA_PRIVATE_KEY=your_private_key_here

# Remote Server Configuration (comma-separated for multiple servers)
# Format: user@host:port,user@host2:port
REMOTE_SERVERS=root@server1.example.com:22,root@server2.example.com:22

# SSH Key Path (optional, defaults to ~/.ssh/id_rsa)
SSH_KEY_PATH=~/.ssh/id_rsa

# Monitoring Configuration
MONITOR_INTERVAL_SECONDS=300
CPU_ALERT_THRESHOLD=90
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
GPU_TEMP_ALERT_THRESHOLD=85

# Analytics Configuration
ANALYTICS_EXPORT_PATH=./exports

