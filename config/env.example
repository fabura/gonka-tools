# Gonka.ai Toolchain Configuration
# =================================
# Copy this file to .env in the project root and fill in your values

# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Gonka Wallet Configuration
# Public address (safe to store here)
GONKA_WALLET_ADDRESS=gonka1...

# Network API (used for public-chain queries in the Telegram bot)
GONKA_PUBLIC_API=http://node2.gonka.ai:8000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Telegram bot node config location (for scripts/telegram_bot.py)
NODES_YAML_PATH=./config/nodes.yaml

# Default model to download/deploy on new nodes
DEFAULT_MODEL_HF_REPO=Qwen/Qwen3-32B-FP8

# Monitoring Configuration
MONITOR_INTERVAL_SECONDS=300
CPU_ALERT_THRESHOLD=90
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
GPU_TEMP_ALERT_THRESHOLD=85

# Alert if free disk space drops below this many GB (recommended 10-20)
DISK_FREE_GB_ALERT_THRESHOLD=15

# Analytics Configuration
ANALYTICS_EXPORT_PATH=./exports

